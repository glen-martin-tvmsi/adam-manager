# Adam Oracle Configuration
# Path: /etc/adam-oracle/oracle_config.env

# Analysis Configuration
OUTPUT_DIR="${HOME}/adam_reports"
OUTPUT_FILE="${OUTPUT_DIR}/oracle_report.json"
IGNORE_PATHS=".git,node_modules,venv,.venv,__pycache__"
MAX_DIR_DEPTH=4

# Dependency Versions
MIN_CLOC_VERSION=1.94
MIN_JQ_VERSION=1.6
MIN_TREE_VERSION=2.0.4

# API Configuration (if needed)
ETHICS_API_ENDPOINT="https://ethics.adam-os.com/v1/scan"
SECURITY_API_KEY="your-api-key-here"

# Path Configuration
BIN_DIR="/usr/local/bin"
LOG_DIR="/var/log/adam-oracle"
CACHE_DIR="${HOME}/.cache/adam-oracle"

# Analysis Parameters
MAX_FILE_SIZE_MB=10
ENABLE_SECURITY_SCANS=true
ENABLE_LICENSE_CHECKS=true
